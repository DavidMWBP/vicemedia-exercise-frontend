{
	"name": "exercise-frontend",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/VICEMedia/exercise-frontend",
	"author": "VICE Engineering <engineering@vice.com>",
	"license": "MIT",
	"scripts": {
		"start-api": "json-server --watch shows.json --port 3001",
		"dev": "concurrently \"yarn start-api\" \"next dev\"",
		"build": "next build",
		"start": "concurrently \"yarn start-api\" \"next start\"",
		"type-check": "tsc --pretty --noEmit",
		"format": "prettier --write .",
		"lint": "eslint . --ext ts --ext tsx --ext js",
		"test": "jest",
		"test-all": "yarn lint && yarn type-check && yarn test"
	},
	"lint-staged": {
		"*.(ts|tsx)": [
			"yarn lint",
			"yarn format"
		]
	},
	"dependencies": {
		"framer-motion": "^4.1.17",
		"json-server": "0.16.1",
		"next": "latest",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-test-renderer": "^17.0.2",
		"styled-components": "^5.2.1",
		"swr": "^0.5.6"
	},
	"devDependencies": {
		"@testing-library/react": "^11.2.6",
		"@types/jest": "^26.0.22",
		"@types/node": "^14.14.37",
		"@types/react": "^17.0.3",
		"@types/react-test-renderer": "^17.0.1",
		"@types/styled-components": "^5.1.10",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"babel-jest": "^26.6.3",
		"babel-plugin-styled-components": "^1.12.0",
		"concurrently": "^6.2.0",
		"eslint": "^7.23.0",
		"eslint-config-next": "^11.0.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-react": "^7.23.1",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": "^6.0.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"jest-module-name-mapper": "^0.1.5",
		"jest-watch-typeahead": "^0.6.1",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"typescript": "^4.2.3"
	}
}
